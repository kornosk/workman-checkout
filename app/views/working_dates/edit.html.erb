<h1>New Working Date</h1>
<%= form_for ([@user, @working_date]) do |f| %>
 
  <% if @working_date.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@working_date.errors.count, "error") %> prohibited
        this working_date from being saved:
      </h2>
      <ul>
        <% @working_date.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Date Picker -->
  <p>
    <%= f.label :date, :placeholder => "Date" %><br>
    <%= date_select :date, "class" => 'input-group date' %>
  </p>
  
  <p>
    <%= f.label :start, :placeholder => "Start" %><br>
    <%= f.time_select :start, "class" => 'input-group date' %>
  </p>
 
  <p>
    <%= f.label :end, :placeholder => "End" %><br>
    <%= f.time_select :end, "class" => 'input-group date' %>
  </p>
 
  <p>
    <%# f.submit %>
    <%= button_tag :submit, class: 'btn btn-primary' %>
  </p>
 
<% end %>

<%= link_to 'Back', user_path(@user) %>