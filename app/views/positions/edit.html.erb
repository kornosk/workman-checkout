<h1>New Position</h1>

<%= form_for @position do |f| %>
 
  <% if @position.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@position.errors.count, "error") %> prohibited
        this position from being saved:
      </h2>
      <ul>
        <% @position.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :id, :placeholder => "ID" %><br>
    <%= f.text_field :id %>
  </p>
 
  <p>
    <%= f.label :name, :placeholder => "Name" %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :description, :placeholder => "Description" %><br>
    <%= f.text_field :description %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>

<%= link_to 'Back', positions_path %>