<p>
  <strong>ID:</strong>
  <%= @position.id %>
</p>

<p>
  <strong>Name:</strong>
  <%= @position.name %>
</p>
 
<p>
  <strong>Description:</strong>
  <%= @position.description %>
</p>

<%= link_to 'Edit', edit_position_path(@position) %> |
<%= link_to 'Back', positions_path %>


<!-- Workman list -->
<hr>
<h2>Workman</h2>
<table class="table table-striped table-hover" id="position-show-table">
	<thead>
    <tr>
      <th>Name</th>
      <th>Picture</th>
      <th>Detail</th>
    </tr> 
  </thead>
  <tbody>
    <% @position.users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><img class="profile-pic-small" src=<%= user.picture %>></td>
        <td><%= link_to 'Detail', user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready(function() {
    $('#position-show-table').DataTable();
});
</script>