<body>
  <%# render 'layouts/nav' %>
  <section class="section">
    <div class="container">
      <div class="columns">
        <div class="heading column is-11">
          <h1 class="title">Users</h1>
        </div>
        <div class="column">
          <%= link_to new_user_path do %>
            <button class="button is-pulled-right">
              <i class="fa fa-plus-circle" aria-hidden="true">Add</i>
            </button>
          <% end %>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="box">
        <table class="table table-striped table-hover" cellspacing="0" id="users-index-table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Picture</th>
              <th>Position</th>
              <th>Avg Time</th>
              <th>Show</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><img class="profile-pic-small" src=<%= user.picture %>></td>
              <td><%= link_to user.position.name, position_path(user.position) %></td>
              <td><%= "%0.2f" % [@avg_time[user.id]] %></td>
              <td><%= link_to 'Show', user_path(user) %></td>
              <td><%= link_to 'Edit', edit_user_path(user) %></td>
              <td><%= link_to 'Destroy', user_path(user),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
    <div class="container">
      <%= link_to root_path do %>
        <button class="button btn-back">Back</button>
      <% end %>
    </div>
  </section>
</body>